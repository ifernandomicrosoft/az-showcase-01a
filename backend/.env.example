# Environment Variables Template for BankGPT Backend

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Cost Management
DAILY_COST_LIMIT=50.00
MONTHLY_COST_LIMIT=1000.00
COST_ALERT_THRESHOLDS=0.5,0.8,0.9

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bankgpt
MONGODB_DB_NAME=bankgpt

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CACHE_PREFIX=bankgpt

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bankgpt.log

# Security Configuration
JWT_SECRET=your-jwt-secret-here
CORS_ORIGIN=http://localhost:8080

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Emergency Settings
ENABLE_FALLBACK_MODE=false
FALLBACK_RESPONSE_ENABLED=true

# Feature Flags
ENABLE_CACHING=true
ENABLE_CONVERSATION_SUMMARIZATION=true
ENABLE_SMART_MODEL_SELECTION=true